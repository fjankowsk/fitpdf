#!/bin/bash

for isamp in 250 500 1000 2500 5000 7500 10000 15000 20000; do
    echo "Running: ${isamp} samples"
    fitpdf-simulate --nsamp ${isamp} --output
    fitpdf-fit simulated_fluences.csv --fast --output --title "${isamp} samples"
    mv pedist_fit.pdf pedist_fit_${isamp}.pdf
    mv fit_result.csv fit_result_${isamp}.csv
done

echo 'All done.'
